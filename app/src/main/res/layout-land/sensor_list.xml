<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:src="@drawable/paccarconnectlogo"
                />

        </LinearLayout>


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/my_toolbar">
        <!--android:layout_toEndOf="@+id/button52"-->

        <Button
            android:id="@+id/button5"
            android:layout_width="273dp"
            android:layout_height="261dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="5dp"
            android:background="fffffff"
            android:text="Display SOMETHING" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <TableRow
                android:id="@+id/descRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView

                    android:id="@+id/col1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#b0b0b0"
                    android:padding="18dip"
                    android:text="#"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <TextView

                    android:id="@+id/col2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#b0b0b0"
                    android:padding="18dip"
                    android:text="Sensor Type"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView

                    android:id="@+id/col3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#b0b0b0"
                    android:padding="18dip"
                    android:text="Value"
                    android:textColor="#000"
                    android:textSize="14dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView

                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#b0b0b0"
                    android:padding="18dip"
                    android:text="1"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <TextView

                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#b0b0b0"
                    android:padding="18dip"
                    android:text="Temp Front"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView

                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#b0b0b0"
                    android:padding="18dip"
                    android:text="56 F"
                    android:textColor="#000"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView

                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#b0b0b0"
                    android:padding="18dip"
                    android:text="2"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <TextView

                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#b0b0b0"
                    android:padding="18dip"
                    android:text="Temp Back"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView

                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#b0b0b0"
                    android:padding="18dip"
                    android:text="57"
                    android:textColor="#000"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView

                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#b0b0b0"
                    android:padding="18dip"
                    android:text="3"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <TextView

                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#b0b0b0"
                    android:padding="18dip"
                    android:text="Humidity"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView

                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#b0b0b0"
                    android:padding="18dip"
                    android:text="99"
                    android:textColor="#000"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView

                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#b0b0b0"
                    android:padding="18dip"
                    android:text="4"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <TextView

                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#b0b0b0"
                    android:padding="18dip"
                    android:text="Door Status"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView

                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#b0b0b0"
                    android:padding="18dip"
                    android:text="Open"
                    android:textColor="#000"
                    android:textSize="14dp" />
            </TableRow>

        </TableLayout>

    </LinearLayout>


</RelativeLayout>